<% @correct = session[:right_count].to_s %>
<% @incorrect = session[:wrong_count].to_s %>
<% @deck_size = session[:deck_size].to_i %>
<% @progress = session[:cards].length / @deck_size %>
<%= session.inspect %>
<section class="stats">

  <% if session[:right_count] || session[:wrong_count]%>
    <span class="correct" id="<%= @correct %>">Correct: <%= @correct %></span><span class="incorrect" id="<%= @incorrect %>">Incorrect: <%= @incorrect %></span>
    <span class="hidden deck_size" id="<%= @deck_size %>"></span>
    <p class="percent-correct">Overall Percentage: <span class="score_num"></span></p>
  <% end %>
</section>

   
